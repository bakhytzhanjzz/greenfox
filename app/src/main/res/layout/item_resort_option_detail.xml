<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/resort_card_background"
    android:padding="16dp"
    android:layout_marginBottom="12dp">

    <!-- Option Image -->
    <ImageView
        android:id="@+id/iv_option"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:background="@drawable/rounded_image_background"
        android:src="@drawable/finnish_house"
        android:layout_marginEnd="16dp"/>

    <!-- Option Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/tv_option_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Финский домик"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tv_option_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Уютный деревянный домик с сауной и террасой"
            android:textSize="14sp"
            android:textColor="#666666"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="от 25,000 ₸/сутки"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"/>

    </LinearLayout>

    <!-- Select Button -->
    <Button
        android:id="@+id/btn_select"
        android:text="Выбрать"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:background="@drawable/select_button_background"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:paddingHorizontal="16dp"
        android:minWidth="0dp"
        android:layout_gravity="center_vertical"/>

</LinearLayout>