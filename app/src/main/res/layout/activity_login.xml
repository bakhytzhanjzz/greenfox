<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/background_blurred">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- Back Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="40dp">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_arrow_back"
                android:background="@drawable/circular_button_background"
                android:scaleType="centerInside"
                android:contentDescription="Back"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>
        </LinearLayout>

        <!-- Logo Section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="80dp">

            <!-- Logo Container -->
            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/greenfox_logo"
                android:layout_marginBottom="16dp">

<!--                <ImageView-->
<!--                    android:layout_width="50dp"-->
<!--                    android:layout_height="50dp"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:src="@drawable/greenfox_logo"-->
<!--                    android:scaleType="centerInside"/>-->
            </FrameLayout>

            <!-- App Name -->
            <TextView
                android:text="GreenFox"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Login Form Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/login_card_background"
            android:padding="24dp"
            android:layout_marginBottom="32dp">

            <!-- Title -->
            <TextView
                android:text="Авторизация"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Subtitle -->
            <TextView
                android:text="На указанный номер будет отправлен SMS-код для подтверждения"
                android:textSize="14sp"
                android:textColor="#666666"
                android:lineSpacingExtra="2dp"
                android:layout_marginBottom="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- Phone Input Label -->
            <TextView
                android:text="Телефон"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Phone Input Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:background="@drawable/phone_input_background"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginBottom="24dp">

                <!-- Country Flag -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="16dp"
                    android:background="@drawable/flag_kazakhstan"
                    android:layout_marginEnd="8dp"/>

                <!-- Country Code -->
                <TextView
                    android:text="+7"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginEnd="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <!-- Phone Number Input -->
                <EditText
                    android:id="@+id/et_phone_number"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="Номер телефона"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:textColorHint="#999999"
                    android:background="@null"
                    android:inputType="phone"
                    android:maxLength="15"/>
            </LinearLayout>

            <!-- Terms Checkbox -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="top"
                android:layout_marginBottom="24dp">

                <CheckBox
                    android:id="@+id/cb_terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox_selector"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="2dp"/>

                <TextView
                    android:text="Я принимаю правила Пользовательского соглашения и условия Политики конфиденциальности"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:lineSpacingExtra="2dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>

            <!-- Continue Button -->
            <Button
                android:id="@+id/btn_continue"
                android:text="Далее"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/continue_button_selector"
                android:enabled="false"
                android:layout_width="match_parent"
                android:layout_height="56dp"/>
        </LinearLayout>

        <!-- Bottom spacer for keyboard -->
        <View
            android:layout_width="1dp"
            android:layout_height="100dp"/>

    </LinearLayout>
</ScrollView>