<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginEnd="8dp"
    android:padding="8dp"
    android:background="@drawable/option_card_background">

    <FrameLayout
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/iv_option"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@drawable/mini_rounded_background"
            android:src="@drawable/finnish_house"/>

        <!-- Diamond icon overlay -->
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="top|end"
            android:layout_margin="4dp"
            android:src="@drawable/ic_diamond"
            android:background="@drawable/diamond_background"/>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_option_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Финский домик"
        android:textSize="12sp"
        android:textColor="#333333"
        android:textAlignment="center"
        android:maxLines="2"
        android:ellipsize="end"/>

</LinearLayout>