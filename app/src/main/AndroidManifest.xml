<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.greenfox.greenfox"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GreenFox"
        tools:targetApi="31">

        <!-- Точка входа -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.GreenFox">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Экран выбора пользователя -->
        <activity android:name=".ChooseUserActivity" />
        <!-- Экран логина -->
        <activity android:name=".LoginActivity" />
        <!-- Экран подтверждения кода -->
        <activity android:name=".VerificationActivity" />
        <!-- Главная для клиента -->
        <activity android:name=".ExploreActivity" />
        <!-- Главная для партнёра -->
        <activity android:name=".PartnerDashboardActivity" />

    </application>

</manifest>
